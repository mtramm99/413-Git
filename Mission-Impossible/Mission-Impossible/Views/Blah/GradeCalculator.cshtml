@{
    ViewData["Title"] = "Calculate!";
}

@model GradeCalculatorModel;

<h2>Grade Calculator</h2>
<form method="post">
    <label>Assignments: </label>
    <input id="assignments" asp-for="Assignments" /><br /><br />
    <label>Group Project: </label>
    <input id="projects" asp-for="Projects" /><br /><br />
    <label>Quizzes: </label>
    <input id="quizzes" asp-for="Quizzes" /><br /><br />
    <label>Exams: </label>
    <input id="exams" asp-for="Exams" /><br /><br />
    <label>INTEX: </label>
    <input id="intex" asp-for="Intex" /><br /><br />
    <input type="submit" value="calculate" id="calculate" />

    <div asp-validation-summary="All"></div>
</form>